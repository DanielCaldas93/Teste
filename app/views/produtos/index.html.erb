<p id="notice"><%= notice %></p>

<h1>Lista de Produtos</h1>

<br>
<hr/>
<%= render 'formbusca' %>
<hr/>
<br>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Descrição</th>
      <th>Quantidade</th>
      <th>Valor Unitário</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @produtos.each do |produto| %>
      <tr>
        <td><%= produto.nome %></td>
        <td><%= produto.descricao %></td>
        <td><%= produto.quantidade %></td>
        <td>R$<%= produto.valorUnit %></td>
                <td><%= link_to 'Mostrar', produto, class: "glyphicon glyphicon-eye-open" %></td>
        <td><%= link_to 'Editar', edit_produto_path(produto), class: "glyphicon glyphicon-pencil" %></td>
        <td><%= link_to 'Deletar', produto, class: "glyphicon glyphicon-pencil", method: :delete, data: { confirm: 'Deseja deletar?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @produtos, previous_label: "Anterior", next_label: "Próxima" %>

<br>

<%= link_to 'Novo Produto', new_produto_path %>
